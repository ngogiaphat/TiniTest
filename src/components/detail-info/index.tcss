.image-description {
  height: 64px;
  overflow: hidden;
  position: relative;
}
.image-description::before {
  left: 0;
  bottom: 0;
  z-index: 1;
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #fff 100%);
}
.view-more {
  left: 50%;
  z-index: 2;
  bottom: 8px;
  position: absolute;
  transform: translateX(-50%);
}