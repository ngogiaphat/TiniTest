.toast {
  left: 50%;
  z-index: 5;
  bottom: -70px;
  position: fixed;
  border-radius: 4px;
  transition: ease 0.3s;
  box-sizing: border-box;
  width: calc(100% - 32px);
  background-color: #00ab56;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.2);
}
.toast-show {
  transform: translate(-50%, calc(0px - 136px - var(--safe-area-inset-bottom)));
}
.toast-hide {
  transform: translate(-50%, 0);
}
.toast .divider {
  width: 1px;
  height: 24px;
  opacity: 0.5;
  background-color: #ebebf0;
}